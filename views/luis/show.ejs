<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
      <meta charset="UTF-8">
      <title>My CRUD </title>
    </head>
    <style>
        table, th, td {
          border: 1px solid black;
          border-collapse: collapse;
          
        }
        h2{
            color: rgb(34, 34, 122);
        }
    </style>
    <body>

    <h2>
        Registros
    </h2>
        <table border="1">
            <thead>
                <tr>
                    <td>Nome</td>
                    <td>Sobrenome</td>
                </tr>
            </thead>
            <tbody>
                <% livro.forEach(function(details) { %>
                <tr>
                    <td><%= details.name %></td>
                    <td><%= details.surname %></td>
                    <td><a href="/luis/edit/<%= details._id %>">Editar</a> - <a href="/luis/delete/<%= details._id %>">Deletar</a></td>
                </tr>
                <% }) %>
            </tbody>
            <button><a href="/luis">Voltar</a></button>
    </body>
</html>