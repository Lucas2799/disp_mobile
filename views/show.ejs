<!DOCTYPE html>
<html lang="en">
    <head>
      <meta charset="UTF-8">
      <title>My CRUD </title>
    </head>
    <style>
        table, th, td {
          border: 1px solid black;
          border-collapse: collapse;
          
        }
        h2{
            color: rgb(34, 34, 122);
        }
    </style>
    <body>

    <h2>
        Registros
    </h2>
        <table border="1">
            <thead>
                <tr>
                    <td>Nome</td>
                    <td>Sobrenome</td>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(details) { %>
                <tr>
                    <td><%= details.name %></td>
                    <td><%= details.surname %></td>
                    <td><a href="/edit/<%= details._id %>">Editar</a> - <a href="/delete/<%= details._id %>">Deletar</a></td>
                </tr>
                <% }) %>
            </tbody>
            <button><a href="/">Voltar</a></button>
    </body>
</html>